@Model Almoxarifado.Models.Area
@{
    ViewBag.Title = "Cadastro";
}
<h2> Lista de Áreas </h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Área</th>
        </tr>
        <tr>
            <a href="/Area/areaCadastro" class="btn btn-success"> Cadastrar nova área</a>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.idArea</th>
                <td>@item.areaDescricao</td>
                <td>
                    <a href="/Area/areaDetalhe?id=@item.idArea" class="btn btn-primary">Detalhe</a>
                    <a href="/Area/areaExcluir?id=@item.idArea" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
         }

    </tbody>
    
</table>